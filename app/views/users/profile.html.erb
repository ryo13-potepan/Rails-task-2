<h2>設定</h2>
<%= render "shared/user" %>

<%= form_with model: @user, local: true do |f| %>
<h2>プロフィール編集</h2>
  <% if current_user.image.attached? %>
    <%= image_tag current_user.image, class: "header-user-icon" %>
  <% else %>
    <img class="header-user-icon" src="https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png" alt="デフォルトアイコン">
  <% end %>

  <%= f.label "アイコン画像" %>
  <%= f.file_field :image, value: current_user.image, required: true %>

  <%= f.label :name, "名前" %>
  <%= f.text_field :name, value: current_user.name, required: true %>

  <%= f.label "自己紹介" %>
  <%= f.text_area :introduction, value: current_user.introduction, required: true, placeholder: "自己紹介を入力" %>

  <%= f.submit "更新" %>
<% end %>
