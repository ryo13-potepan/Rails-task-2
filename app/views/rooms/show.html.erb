<h3>施設詳細</h3>

<table>
  <tr>
    <th>施設イメージ</th>
    <td class="room_image"><%= image_tag @room.image %></td>
  </tr>

  <tr>
    <th>施設名</th>
    <td class="room_detail"><%= @room.name %></td>
  </tr>

  <tr>
    <th>施設紹介</th>
    <td class="room_detail"><%= @room.introduction %></td>
  </tr>

  <tr>
    <th>料金(/日)</th>
    <td class="room_detail"><%= @room.price %></td>
  </tr>
</table>


<div class="link_btn">
  <%= link_to "施設一覧へ戻る", :rooms %>
</div>

<div class="reserve_form">
  <%= form_with model: @reservation do |f| %>
    <table>
      <tr>
        <th><%= f.label :start_at ,"チェックイン" %></th>
        <td><%= f.date_field :start_at %></td>
      </tr>

      <tr>
        <th><%= f.label :finish_at ,"チェックアウト" %></th>
        <td><%= f.date_field :finish_at %></td>
      </tr>

      <tr>
        <th><%= f.label :people ,"人数" %></th>
        <td><%= f.number_field :people %></td>
      </tr>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :room_id, value: @room.id%>
    </table>
    
    <p class="reserve_btn"><%= f.submit "予約する" %></p>
  <% end %>
</div>

