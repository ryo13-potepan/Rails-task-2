<div class="create_room">
  <h2>ルーム新規登録</h2>
  <%= form_with model: @room, url: rooms_path do |f| %>
    <table>
      <tr>
        <th><%= f.label :name ,"施設名" %></th>
        <td><%= f.text_field :name, placeholder: "ルーム名を入力" %></td>
      </tr>

      <tr>
        <th><%= f.label :introduction ,"施設詳細" %></th>
        <td><%= f.text_area :introduction, placeholder: "施設詳細を入力" %></td>
      </tr>

      <tr>
        <th><%= f.label :price ,"料金" %></th>
        <td><%= f.number_field :price, placeholder: "1日あたりの料金を入力" %></td>
      </tr>

      <tr>
        <th><%= f.label :address ,"住所" %></th>
        <td><%= f.text_field :address, placeholder: "住所を入力" %></td>
      </tr>

      <tr>
        <th><%= f.label :image ,"施設画像" %></th>
        <td><%= f.file_field :image %></td>
      </tr>
    </table>
    
    <ul class="update_button_area">
    <%= f.submit "保存", class: "update_button" %>
    <a class="cancel" href="http://localhost:3000">キャンセル</a>
    </ul>
  <% end %>
</div>