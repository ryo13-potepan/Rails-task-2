<div class="create_acount">
  <h2 class="create_title">ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email ,"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力", class: "form1" %>
    </div>

    <div class="field">
      <%= f.label :password ,"パスワード"%><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力", class: "form1" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me ,"ログイン情報を記憶する" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "form2" %>
    </div>
  <% end %>

<%= render "devise/shared/links" %>
